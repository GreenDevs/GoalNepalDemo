<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/profileLogin"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:background="@drawable/nava_bagr"
        android:elevation="10dp"

        android:paddingLeft="10dp"
        android:paddingTop="30dp"
        android:tag="Profile">


        <ImageView
            android:id="@+id/user_icon"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/user" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_user_name"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/user_icon"
            android:text="javanuxenergy@gmail.com"
            android:textColor="#ccc" />
    </RelativeLayout>


    <TextView
        android:id="@+id/gal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="galleryClicked"
        android:padding="10dp"
        android:text="GALLERY"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/pref"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="galleryClicked"
        android:padding="10dp"
        android:text="PREFERENCES"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/videos"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="galleryClicked"
        android:padding="10dp"
        android:text="Video Gallery"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/radio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="galleryClicked"
        android:padding="10dp"
        android:text="Goal Nepal Radio"
        android:textStyle="bold" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/nav_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp" />


</LinearLayout>
