<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    >

    <TextView
        android:id="@+id/team_position"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:textColor="#222"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/team_icon"
        android:src="@drawable/circle_plus"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:textColor="#222" />

    <TextView
        android:text="NEP"
        android:id="@+id/team_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="3"
        android:textColor="#222"
        android:textSize="12sp" />

    <TextView
        android:text="10"
        android:id="@+id/match_played"
        android:layout_width="0dp"

        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:textColor="#222"
        android:textSize="12sp"


        />

    <TextView
        android:text="89"
        android:id="@+id/match_won"
        android:layout_width="0dp"

        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:textColor="#222"
        android:textSize="12sp"
        />

    <TextView
        android:text="10"
        android:id="@+id/match_draw"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:textColor="#222"
        android:textSize="12sp"
        />

    <TextView
        android:text="10"
        android:id="@+id/match_lost"
        android:layout_width="0dp"

        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:textColor="#222"
        android:textSize="12sp"
        />

    <TextView
        android:text="13"
        android:id="@+id/goal_finished"
        android:layout_width="0dp"

        android:layout_height="wrap_content"

        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:textColor="#222"
        android:textSize="12sp"
        />

    <TextView
        android:text="29"
        android:id="@+id/goal_accepted"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:paddingLeft="3dp"
        android:textColor="#222"
        android:textSize="12sp" />

    <TextView
        android:text="19"
        android:id="@+id/goal_diff"
        android:layout_width="0dp"

        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:textColor="#222"
        android:textSize="12sp" />

    <TextView
        android:text="19"
        android:id="@+id/points"
        android:layout_width="0dp"

        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:textColor="#222"
        android:textSize="12sp" />
</LinearLayout>